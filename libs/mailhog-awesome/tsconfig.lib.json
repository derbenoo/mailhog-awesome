{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": ["node"]
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}

    "copy-readme": "cp README.md dist/libs/mailhog-awesome/src",
    "copy-license": "cp LICENSE dist/libs/mailhog-awesome/src",
    "copy-changelog": "cp CHANGELOG.md dist/libs/mailhog-awesome/src",
    "copy-package-json": "cp libs/mailhog-awesome/package.json dist/libs/mailhog-awesome/src"
  },
  "private": true,
  "dependencies": {
    "delay": "^4.3.0",
    "mailhog": "^4.7.0"
  },
  "devDependencies": {
    "@nrwl/eslint-plugin-nx": "8.5.0",
    "@nrwl/jest": "^8.5.0",
    "@nrwl/linter": "^8.5.0",
    "@nrwl/workspace": "8.5.0",
    "@types/jest": "24.0.9",
    "@types/node": "^8.9.5",
    "@types/nodemailer": "^6.2.1",
    "@typescript-eslint/eslint-plugin": "2.0.0-alpha.4",
    "@typescript-eslint/parser": "2.0.0-alpha.4",
    "dotenv": "6.2.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "jest": "24.1.0",
    "nodemailer": "^6.3.0",
    "prettier": "1.16.4",
    "ts-jest": "24.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.2.1",
    "typescript": "~3.4.5"
  }
}

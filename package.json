{
  "name": "mailhog-awesome",
  "version": "0.1.3",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "lint": "nx workspace-lint && nx lint",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "pack:lib": "rm -r dist/libs/mailhog-awesome || true && tsc --build libs/mailhog-awesome/tsconfig.lib.json && npm run copy-files",
